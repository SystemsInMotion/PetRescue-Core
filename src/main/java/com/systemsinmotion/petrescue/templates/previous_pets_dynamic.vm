#macro (previousPet $previouspet)
	<hr>
	#labelfield("Name", "", $previouspet.name)
	#labelfield("Type/Breed", "", $previouspet.breed)
	#labelfield("How old is this pet?", "", $previouspet.age)
	#labelfield("Does this pet sleep inside?", "", $previouspet.isIndoor)
#end

<h3>Previous Pets</h3>
<div class="module">
	<div class="innards">
	
		#labelfield("How many pets have you owned in the past 10 years? (Max 20)", "previousPetCount", $application.previousPetCount)
		
		#foreach ($previouspet in $application.previousPets)
			#previousPet($previouspet)
		#end
		
	</div>
</div>
